	</ul>
</div>

<div class="products">
    <% @products.each do |product| %>
        <%= link_to(product_path(product), { :class => "col-md-4" }) do %>
        <div class="thumbnail">
            <%= image_tag(product.image.thumb.url) %>
            <div class="caption">
                <h3>$<%= product.price %></h3>
                <p><%= product.title %></p>
            </div>
        </div>
        <% end %>
    <% end %>
</div>
   
